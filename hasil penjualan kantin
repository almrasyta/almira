<body>
  <div class="container">
    <header>
      <h1>üìä Laporan Penjualan Kantin</h1>
      <div class="tools">
        <button id="exportCsv" class="small">Export CSV</button>
        <button id="printBtn" class="small">Print</button>
        <button id="clearStorage" class="small">Reset Data</button>
      </div>
    </header><div class="card">
  <form id="saleForm">
    <div>
      <label for="item">Nama Barang</label>
      <input id="item" required placeholder="Contoh: Siomay" />
    </div>

    <div>
      <label for="qty">Jumlah</label>
      <input id="qty" type="number" min="1" value="1" required />
    </div>

    <div>
      <label for="price">Harga (Rp)</label>
      <input id="price" type="number" min="0" value="5000" required />
    </div>

    <div>
      <label for="date">Tanggal</label>
      <input id="date" type="date" required />
    </div>

    <div>
      <button id="addBtn" type="submit">Tambah</button>
    </div>
  </form>

  <div style="margin-top:14px;display:flex;gap:10px;align-items:center;flex-wrap:wrap">
    <label style="margin:0;font-size:13px;color:var(--muted)">Cari:</label>
    <input id="search" placeholder="Nama barang atau tanggal (YYYY-MM-DD)" style="flex:1;max-width:420px;padding:8px;border-radius:8px;border:1px solid #e6e9ef" />
    <select id="filterDateRange" style="padding:8px;border-radius:8px;border:1px solid #e6e9ef">
      <option value="all">Semua tanggal</option>
      <option value="today">Hari ini</option>
      <option value="thisMonth">Bulan ini</option>
    </select>
  </div>

  <table id="salesTable" aria-describedby="total">
    <thead>
      <tr>
        <th>No</th>
        <th>Nama Barang</th>
        <th>Jumlah</th>
        <th>Harga (Rp)</th>
        <th>Subtotal (Rp)</th>
        <th>Tanggal</th>
        <th>Aksi</th>
      </tr>
    </thead>
    <tbody></tbody>
    <tfoot>
      <tr>
        <td colspan="4">Total</td>
        <td id="grandTotal">Rp 0</td>
        <td colspan="2" id="totalCount">0 item</td>
      </tr>
    </tfoot>
  </table>

</div>

  </div>  <script>
    // Simple sales manager using localStorage
    const KEY = 'kantin_sales_v1';
    const form = document.getElementById('saleForm');
    const itemInput = document.getElementById('item');
    const qtyInput = document.getElementById('qty');
    const priceInput = document.getElementById('price');
    const dateInput = document.getElementById('date');
    const tbody = document.querySelector('#salesTable tbody');
    const grandTotal = document.getElementById('grandTotal');
    const totalCount = document.getElementById('totalCount');
    const search = document.getElementById('search');
    const filterDateRange = document.getElementById('filterDateRange');

    // Init date default to today
    dateInput.valueAsDate = new Date();

    function load(){
      const raw = localStorage.getItem(KEY);
      return raw ? JSON.parse(raw) : [];
    }
    function save(data){
      localStorage.setItem(KEY, JSON.stringify(data));
    }

    function formatRupiah(n){
      return 'Rp ' + Number(n).toLocaleString('id-ID');
    }

    function render(){
      const rows = load();
      const q = search.value.trim().toLowerCase();
      const filter = filterDateRange.value;
      const today = new Date();

      let filtered = rows.filter(r => {
        if(q){
          if(!(r.item.toLowerCase().includes(q) || r.date.includes(q))) return false;
        }
        if(filter==='today'){
          const d = new Date(r.date); return d.toDateString() === today.toDateString();
        }
        if(filter==='thisMonth'){
          const d = new Date(r.date); return d.getMonth()===today.getMonth() && d.getFullYear()===today.getFullYear();
        }
        return true;
      });

      tbody.innerHTML = '';
      let total = 0;
      filtered.forEach((r, i)=>{
        const tr = document.createElement('tr');
        const subtotal = r.qty * r.price;
        total += subtotal;
        tr.innerHTML = `
          <td>${i+1}</td>
          <td>${escapeHtml(r.item)}</td>
          <td>${r.qty}</td>
          <td>${formatRupiah(r.price)}</td>
          <td>${formatRupiah(subtotal)}</td>
          <td>${r.date}</td>
          <td class="actions">
            <button onclick="editItem(${r.id})" title="Edit">‚úèÔ∏è</button>
            <button onclick="deleteItem(${r.id})" title="Hapus" style="background:#ef4444;color:white;padding:6px;border-radius:8px;border:0;">üóëÔ∏è</button>
          </td>`;
        tbody.appendChild(tr);
      });

      grandTotal.textContent = formatRupiah(total);
      totalCount.textContent = `${filtered.length} item`;
    }

    function escapeHtml(text){
      return text.replace(/[&<>"']/g, function(m){return ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;','\'":"'"})[m]});
    }

    // Add or update
    form.addEventListener('submit', (e)=>{
      e.preventDefault();
      const rows = load();
      const newItem = {
        id: Date.now(),
        item: itemInput.value.trim(),
        qty: Number(qtyInput.value),
        price: Number(priceInput.value),
        date: dateInput.value
      };
      rows.push(newItem);
      save(rows);
      form.reset();
      dateInput.valueAsDate = new Date();
      render();
    });

    window.editItem = function(id){
      const rows = load();
      const idx = rows.findIndex(r=>r.id===id);
      if(idx===-1) return alert('Data tidak ditemukan');
      const r = rows[idx];
      // Populate form with existing data and remove the old entry; user re-submit to save edit
      itemInput.value = r.item;
      qtyInput.value = r.qty;
      priceInput.value = r.price;
      dateInput.value = r.date;
      // remove old
      rows.splice(idx,1);
      save(rows);
      render();
    }

    window.deleteItem = function(id){
      if(!confirm('Hapus data penjualan ini?')) return;
      const rows = load().filter(r=>r.id!==id);
      save(rows);
      render();
    }

    search.addEventListener('input', render);
    filterDateRange.addEventListener('change', render);

    // Export CSV
    document.getElementById('exportCsv').addEventListener('click', ()=>{
      const rows = load();
      if(rows.length===0) return alert('Tidak ada data untuk diexport');
      const header = ['id','nama_barang','jumlah','harga','tanggal','subtotal'];
      const lines = [header.join(',')];
      rows.forEach(r=>{
        const subtotal = r.qty * r.price;
        const line = [r.id, '"'+r.item.replace(/"/g,'""')+'"', r.qty, r.price, r.date, subtotal];
        lines.push(line.join(','));
      });
      const csv = lines.join('\n');
      const blob = new Blob([csv], {type: 'text/csv'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a'); a.href=url; a.download = 'penjualan_kantin.csv'; a.click(); URL.revokeObjectURL(url);
    });

    // Print
    document.getElementById('printBtn').addEventListener('click', ()=>{
      window.print();
    });

    // Reset data
    document.getElementById('clearStorage').addEventListener('click', ()=>{
      if(confirm('Reset semua data penjualan (tidak bisa dikembalikan)?')){
        localStorage.removeItem(KEY);
        render();
      }
    });

    // initial render
    render();
  </script></body>
</html>
